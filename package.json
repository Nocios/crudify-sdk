{
  "name": "@nocios/crudify-sdk",
  "version": "1.0.9",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=24.12.0"
  },
  "description": "Browser-specific Lightweight JS SDK for Crudify GraphQL API with Refresh Token Pattern support",
  "author": "Nocios",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "ci": "pnpm run validate",
    "sonar": "pnpm test && npx sonarqube-scanner -Dsonar.host.url=http://localhost:9000",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nocios/crudify.git"
  },
  "bugs": {
    "url": "https://github.com/nocios/crudify/issues"
  },
  "homepage": "https://github.com/nocios/crudify#readme",
  "keywords": [
    "nocios",
    "crudify",
    "crud",
    "api",
    "typescript",
    "sdk",
    "browser",
    "refresh-token",
    "jwt",
    "authentication",
    "security"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.2",
    "happy-dom": "^19.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  }
}
